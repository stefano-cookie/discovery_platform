# Example environment variables file
# Copy this file to .env and fill in your values

# Backend (.env in backend folder)
NODE_ENV="development"
DATABASE_URL="postgresql://user:password@localhost:5432/database"
JWT_SECRET="your-jwt-secret-here"
PORT=3001
FRONTEND_URL="http://localhost:3000"  # Change to your production URL in production
TELEGRAM_BOT_TOKEN=""

# Email Configuration
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_SECURE="false"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="noreply@yourdomain.com"

# Frontend (.env in frontend folder)
# Use relative path for production to avoid CORS issues
REACT_APP_API_URL="/api"  # In production, use /api for same-origin requests

# Development overrides (use .env.development)
# REACT_APP_API_URL="http://localhost:3001/api"
# HOST="localhost"