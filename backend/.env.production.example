# Production Environment Configuration
# Copy this file to .env on the production server and fill in the values

# Server
NODE_ENV=production
PORT=3010

# Database
DATABASE_URL=postgresql://USER:PASSWORD@localhost:5432/discovery_db

# JWT
JWT_SECRET=your-super-secure-jwt-secret-here

# CORS
CORS_ORIGIN=https://discovery.cfoeducation.it

# File Upload
UPLOAD_DIR=/var/www/vhosts/cfoeducation.it/discovery.cfoeducation.it/backend/uploads
MAX_FILE_SIZE=10485760

# Email (if needed)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=